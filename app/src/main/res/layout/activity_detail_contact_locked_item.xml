<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >

    <FrameLayout
        android:id="@+id/ll_recieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bg_message_left_split"
            android:minWidth="120dp"
            android:orientation="vertical" >

            <com.protector.views.CustomFontTextView
                android:id="@+id/tv_body_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Body receive"
                android:textColor="#343535"
                android:textSize="14sp"
                font:font="@string/font_main" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#a2a2a2" />

            <com.protector.views.CustomFontTextView
                android:id="@+id/tv_date_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="2dp"
                android:text="5-9 12:30"
                android:textColor="#484949"
                android:textSize="12sp"
                font:font="@string/font_main" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_new"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|top"
            android:contentDescription="@string/apps"
            android:src="@drawable/check" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="100dp"
        android:background="@drawable/ic_bg_sms_right_split"
        android:minWidth="120dp"
        android:orientation="vertical" >

        <com.protector.views.CustomFontTextView
            android:id="@+id/tv_body_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Body receive"
            android:textColor="#343535"
            android:textSize="14sp"
            font:font="@string/font_main" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#a2a2a2" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="2dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_type_send"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_launcher" />

                <com.protector.views.CustomFontTextView
                    android:id="@+id/tv_type_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Sent"
                    android:textColor="#484949"
                    android:textSize="12sp"
                    font:font="@string/font_main" />
            </LinearLayout>

            <com.protector.views.CustomFontTextView
                android:id="@+id/tv_date_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="5-9 12:30"
                android:textColor="#484949"
                android:textSize="12sp"
                font:font="@string/font_main" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_call_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minWidth="120dp"
        android:orientation="horizontal"
        android:padding="2dp" >

        <ImageView
            android:id="@+id/img_type_call_log"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_launcher" />

        <com.protector.views.CustomFontTextView
            android:id="@+id/tv_date_call_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="5-7 08:30"
            android:textColor="#343535"
            android:textSize="14sp"
            font:font="@string/font_main" />

        <com.protector.views.CustomFontTextView
            android:id="@+id/tv_type_call_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incomming call"
            android:textColor="#343535"
            android:textSize="14sp"
            font:font="@string/font_main" />
    </LinearLayout>

</LinearLayout>