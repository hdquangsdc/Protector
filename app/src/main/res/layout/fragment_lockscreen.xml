<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"    
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imv_number_1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@string/keypad_number"
            android:orientation="horizontal"
            android:paddingRight="5dp"
            android:src="@drawable/keypad_number_1" >
        </ImageView>

        <ImageView
            android:id="@+id/imv_number_2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@string/keypad_number"
            android:orientation="horizontal"
            android:paddingRight="5dp"
            android:src="@drawable/keypad_number_2" >
        </ImageView>

        <ImageView
            android:id="@+id/imv_number_3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@string/keypad_number"
            android:orientation="horizontal"
            android:paddingRight="5dp"
            android:src="@drawable/keypad_number_3" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/imv_number_4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@string/keypad_number"
            android:orientation="horizontal"
            android:paddingRight="5dp"
            android:src="@drawable/keypad_number_4" >
        </ImageView>

        <ImageView
            android:id="@+id/imv_number_5"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@string/keypad_number"
            android:orientation="horizontal"
            android:paddingRight="5dp"
            android:src="@drawable/keypad_number_5" >
        </ImageView>

        <ImageView
            android:id="@+id/imv_number_6"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@string/keypad_number"
            android:orientation="horizontal"
            android:paddingRight="5dp"
            android:src="@drawable/keypad_number_6" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/imv_number_7"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@string/keypad_number"
            android:orientation="horizontal"
            android:paddingRight="5dp"
            android:src="@drawable/keypad_number_7" >
        </ImageView>

        <ImageView
            android:id="@+id/imv_number_8"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@string/keypad_number"
            android:orientation="horizontal"
            android:paddingRight="5dp"
            android:src="@drawable/keypad_number_8" >
        </ImageView>

        <ImageView
            android:id="@+id/imv_number_9"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@string/keypad_number"
            android:orientation="horizontal"
            android:paddingRight="5dp"
            android:src="@drawable/keypad_number_9" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/imv_camera"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@string/keypad_number"
            android:orientation="horizontal"
            android:paddingRight="5dp"
            android:src="@drawable/keypad_number_1" >
        </ImageView>

        <ImageView
            android:id="@+id/imv_number_0"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@string/keypad_number"
            android:orientation="horizontal"
            android:paddingRight="5dp"
            android:src="@drawable/keypad_number_0" >
        </ImageView>

        <ImageView
            android:id="@+id/imv_backspace"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@string/keypad_number"
            android:orientation="horizontal"
            android:paddingRight="5dp"
            android:src="@drawable/keypad_number_1" >
        </ImageView>
    </LinearLayout>

</LinearLayout>